<% if user_signed_in? %>
  <div class="container mt-4 col-4 offset-4">
    <h1>New Lesson</h1>
    <%= simple_form_for @lesson do |f| %>
      <%= f.input :teacher %>
      <%= f.input :description %>
      <%= f.submit "Submit", class:"form-actions btn btn-outline-primary rounded mb-3"%>
      <%= link_to "back", lessons_path, class:"form-actions btn btn-outline-primary rounded mb-3"%>
    <% end %>
  </div>
<% end %>